@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>
<p>Select an engineer to view their details.</p>

@if (Model.Count == 0)
{
  <p>No engineers have been added yet. Please add an engineer.</p>
}

<ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<button>
  @Html.ActionLink("Add Engineer", "Create")
</button>
<button>
  @Html.ActionLink("Home", "Index", "Home")
</button>