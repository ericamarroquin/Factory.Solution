@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>
<p>Select a machine to see its details.</p>

@if(Model.Count == 0)
{
  <p>No machines have been added yet. Please add a machine.</p>
}

<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>

<button>
  @Html.ActionLink("Add Machine", "Create")
</button>
<button>
  @Html.ActionLink("Home", "Index", "Home")
</button>